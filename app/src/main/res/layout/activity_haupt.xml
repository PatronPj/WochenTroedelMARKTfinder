<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_haupt"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <TextView
        android:text="@string/str_tv_titel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_titel" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="200dp">

    <Button
        android:text="@string/str_onlineMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_onlineMode"/>

    <Button
        android:text="@string/str_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_filter" />


    <Button
        android:text="@string/str_offlineMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_offlineMOde" />

    <Button
        android:text="@string/str_credits"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/btn_credits" />

    </LinearLayout>

</LinearLayout>
